<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:id="@+id/artisan_home_page_dl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:id="@+id/artisan_home_page_button_logout"/>-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="20sp"
                android:onClick="Order_history"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order history"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/order_history"
                        />

                    <ImageView
                        android:id="@+id/order_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_foreground1"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="20sp"
                android:onClick="Order_requests"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order requests"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/order_requests"
                        />

                    <ImageView
                        android:id="@+id/order_requests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_foreground2"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="20sp"
                android:onClick="my_products"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My products"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/my_products"
                        />

                    <ImageView
                        android:id="@+id/my_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_my_products_round"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/user_home_page_navigation_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/artisan_home_page_navigation_header"
        app:menu="@menu/artisan_home_page_navigation_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
