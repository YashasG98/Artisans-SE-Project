<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:id="@+id/artisanOrderRequest">

    <TextView
        android:paddingTop="40dp"
        android:id="@+id/noMatchArtisanOrderRequest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patience is the key."
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="40sp"
        />

    <TextView
        android:paddingTop="40dp"
        android:id="@+id/noMatchArtisanOrderRequest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No order requests at the moment."
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="40sp"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/artisanOrderRequest_rv">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>