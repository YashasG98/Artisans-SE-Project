<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ad"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/user_confirmation_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/user_confirmation_delivery_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery charges:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="2dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Date: "
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginEnd="3dp"/>
            <EditText
                android:id="@+id/delivery_date_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Select delivery date"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/calendar_24"
                android:ellipsize="end"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="74dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:text="Quantity: "
                    android:textColor="#000"
                    android:textSize="18sp" />

                <NumberPicker
                    android:id="@+id/user_confirmation_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </NumberPicker>

            </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/user_confirmation_total_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Total price: "
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>